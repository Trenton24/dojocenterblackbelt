@using exam.Models
@model Users
<h1>Welcome to the Dojo Activity Center</h1>
<h3><a class="btn btn-primary" href="/signin">Login</a></h3>
<form asp-action="register" asp-controller="Home" method="post">
    <span asp-validation-for="FirstName"></span>
    <p>First Name: <input asp-for="FirstName"></p>
    <span asp-validation-for="LastName"></span>
    <p>Last Name: <input asp-for="LastName"></p>
    <span asp-validation-for="Email"></span>
    <p>Email: <input asp-for="Email"></p>
    <span asp-validation-for="Password"></span>
    <p>Password: <input type="password" asp-for="Password"></p>
    <span asp-validation-for="Confirm"></span>
    <p>Confirm Password: <input type="password" asp-for="Confirm"></p>
    <input class="btn btn-primary" type='submit' value="Sign up Now">
</form>